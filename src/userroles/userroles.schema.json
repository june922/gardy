{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "User roles",
    "description": "The User roles schema",
    "required": [
        "name"
    ],
    "additionalProperties": true,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the user role."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The user role name.",
            "examples": [
                "Test"
            ]
        },
        "created_by": {
            "$id": "#/properties/created_by",
            "type": "integer",
            "title": " created by."
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of the user role."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date the user role was last updated."
        },
        "updated_by": {
            "$id": "#/properties/updated_by",
            "type": "integer",
            "title": "The user who last updated the user role."
        }
    }
}