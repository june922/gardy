{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "City",
    "description": "The City schema",
    "required": [
        "name"
    ],
    "additionalProperties": true,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the city."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The city name.",
            "examples": [
                "Test"
            ]
        },
        "country_id": {
            "$id": "#/properties/country_id",
            "type": "integer",
            "title": "The country_id of the city."
        },
        "created_by": {
            "$id": "#/properties/created_by",
            "type": "integer",
            "title": "Speciality created by."
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of the city."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date the city was last updated."
        }
    }
}