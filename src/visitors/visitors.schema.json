{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "visitors",
    "description": "The visitors schema",
    "required": [
        "visitor_name",
        "tenant_id",
        "visitor_type_id"
    ],
    "additionalProperties": true,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the visitor."
        },
        "tenant_id": {
            "$id": "#/properties/tenant_id",
            "type": "integer",
            "title": "The database ID of the user who added the visitor refernces the users table  id column ."
        },
        "visitor_name": {
            "$id": "#/properties/visitor_name",
            "type": "string",
            "title": "The name of the visitor."
        },
        "national_id": {
            "$id": "#/properties/national_id",
            "type": "integer",
            "title": "The national_id of the visitor." 
        },
        "visitor_type_id": {
            "$id": "#/properties/visitor_type_id",
            "type": "integer",
            "title": "The ID representing the type of visitor type ID from the visitor_types table."
        },
        "phone_no": {
            "$id": "#/properties/contact_info",
            "type": "string",
            "title": "Optional contact details for the visitor."

        },
        "expected_date": {
            "$id": "#/properties/expected_date",
            "type": "string",
            "format": "date",
            "title": "The expected date and time for the visitor."
        },
        "expected_time": {
            "$id": "#/properties/expected_time",
            "type": "string",
            "format": "time",
            "title": "The expected time for the visitor."
       
        },
        "remarks": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "Optional description or additional notes about the visitor."
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "format": "date-time",
            "title": "The date and time the visitor record was created."
        }
    }
}
