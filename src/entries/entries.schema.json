{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Entries",
  "description": "The Entries schema for logging vehicle check-ins and check-outs.",
  "required": [
    "check_in"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "The database ID of the entry."
    },
    "entry_type_id": {
      "$id": "#/properties/entry_type",
      "type": "integer",
      "title": "select id from entrytypes" 
    },
    "visitor_type_id": {
      "$id": "#/properties/visitor_types",
       "type": ["integer", "null"],
      "title": "select id from visitortypes"
    },
    "tenant_id": {
      "$id": "#/properties/tenant_id",
      "type": "integer",
      "title": "The ID of the tenant who added the visitor. References tenants table."
    },
    "vehicle_details": {
      "type": ["object","null"],
      "description": "Optional JSON object containing vehicle info",
      "properties": {
          "description": { 
              "type": "string", 
              "description": "Vehicle description (new format)"
          },
          "make": { 
              "type": "string", 
              "description": "The make of the vehicle"
          },
          "model": { 
              "type": "string", 
              "description": "The model of the vehicle"
          },
          "color": { 
              "type": "string", 
              "description": "The color of the vehicle"
          },
          "number_plate": { 
              "type": "string", 
              "description": "The license plate of the vehicle"
          }
      }
    },
       
    "house_id": {
      "$id": "#/properties/house_id",
      "type": "integer",
      "title": "The house number ID."
    },
    "checked_in_by": {
      "$id": "#/properties/security guard",
      "type":  ["integer", "null"],
      "title": "references employee id."
    },
    "check_in": {
      "$id": "#/properties/check_in",
      "type": "string",
      "format": "date-time"
      
    },
    "check_out": {
      "$id": "#/properties/check_out",
      "type": ["string","null"],
      "format": "date-time"
    },
    "checked_out_by": {
      "$id": "#/properties/checked_out_by",
      "type": ["integer","null"],
      "title": "references employee id."
    },
    "remarks": {
      "$id": "#/properties/remarks",
      "type": "string",
      "title": "Any notable details (e.g., suspicious activities)."
    },
    "first_name": {
      "$id": "#/properties/first_name",
      "type": "string",
      "title": "The first_name of the visitor."
    },
    "last_name": {
      "$id": "#/properties/last_name",
      "type": "string",
      "title": "The last_name of the visitor."
    },
    "national_id": {
      "$id": "#/properties/national_id",
       "type": ["string", "null"],
      "title": "The visitor's National ID ."
    },
    "phone_number": {
      "$id": "#/properties/phone_number",
      "type": "string",
      "title": "The phone number of the visitor  ."
    },
    "number_of_people": {
      "$id": "#/properties/number_of_people",
      "type": "integer",
      "title": "The number of people in the vehicle."
    }
  }
}