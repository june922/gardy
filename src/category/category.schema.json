{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "category",
    "description": "The category schema",
    "required": [
        "name"
    ],
    "additionalProperties": true,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the category name."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The category  name.",
            "examples": [
                "Vehicle,furniture"
            ]
        
        },

        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The category description.",
            "examples": [
                "Vehicle,furniture"
            ]
        }
    }
}